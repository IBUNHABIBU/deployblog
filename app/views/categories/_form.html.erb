<div class="form form--mid">
  <div class="form__container">
    <%= form_for(@category) do |f| %>
     <%= render 'shared/errors', object: @category %>
          <div class="input-box">
            <%= f.text_field :name, required: "required" %>
            <span>Category Name</span>
            <i></i>
          </div>
          <div class="input-box">
            
            <%= f.email_field :email, required: "required" %>
            <span>Email</span>
            <i></i>
          </div>
          <div class="input-box">
            <%= f.password_field :password, required: "required"  %>
            <span>Password</span>
            <i></i>
          </div>
          <div class="input-box">
            <%= f.password_field :password_confirmation, required: "required" %>
            <span>password Confirmation</span>
            <i></i>
          </div>
  
       
          <%= f.submit "Update account", class: "btn" %>
          <% end %>
    <% end %>
  </div>
</div>