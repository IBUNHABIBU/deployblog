<header>
    <h1 class="navlogo">LiFEsTlye<span class="logo-dot"></span></h2>

<div class="category-list"> 
<ul class="category-ul">
<li class="category-li">
  <%= link_to "Home" , root_path, class:"cat-link-names", id:"home-btn" %>
</li>
</ul>

<% Category.priority_cat.each do |category| %>
<ul class="category-ul">
<li class="category-li">
  <%= link_to "#{category.name}" , category_path(category), class:"cat-link-names" %>
</li>
</ul>
</div>

<% end %>
<ul class="authentication">
  
<% if current_user %>
<div class="auth-div">
  
<li class="dropdown-right">
  <%= link_to "All" ,categories_path , class:"header__menu__item" %>
  <ul>
    <li><%= link_to "Category", categories_path, class:"menu-item" %></li>
    <li><%= link_to "Article", articles_path, class:"menu-item" %></li>
  </ul>
</li>
  
<li class="dropdown-right">
   <%= link_to "Create" ,categories_path , class:"auth-link" %>
  <ul>
    <li><%= link_to "Category", new_category_path, class:"menu-item" %></li>
    <li><%= link_to "Article", new_article_path, class:"menu-item" %></li>
  </ul>

</li>
<li class="auth-li">
<%= link_to "Log out", logout_path, method: :delete, class:"auth-link" %>
</li>
</div>
<% else %>
<div class="auth-div">
<li class="auth-li">
  <%= link_to 'Login', login_path , class:"auth-link vertical-line" %>
<%= link_to 'Register', signup_path , class:"auth-link"%>
</li>
</div>
</div>

<% end %>
<i class="fas fa-search "></i>
</ul>
</header>