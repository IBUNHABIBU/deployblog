<div class="home">
   <div class="home__top">
       <div class="slider">
        <% @most_rated_articles.each do |article| %>
             
               <div class="color-overlay"></div>
               <div class="bg-img" <% if article.image.attached? %>style="background: url(<%= rails_blob_url(article.image) %>)"<% end %>>
              <%# <div class="bg-img" style="background: url(<%= rails_blob_url(article.image) %>
                 <div class="rated_title" id="rated_title">
                   <%=  link_to "#{article.title}", article_path(article), class:"title-link" %>
                 </div>
                 <div class="rated_content">
                      <%= truncate(article.content, length:200, separator:' ') %>
                 </div>
              </div>
             
        <% end %>
       </div>
      <div class="weather-image">
           <%= image_tag('weather.jpg', :alt => "weather pic") %>
      </div>
   </div>
   <div class="home__recent">
          <%= render 'article', obj:@recent_articles %>
   </div>
</div>